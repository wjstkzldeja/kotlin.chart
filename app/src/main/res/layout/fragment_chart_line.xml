<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.osl.base.project.main.views.chart.line.ChartLineViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdasdasdasd"/>
                    <!--line chart-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="visible"
                        android:background="#070318"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.osl.base.project.main.utils.chart.line.ChartLineBaseDraw
                            android:id="@+id/chartLineBase"
                            android:layout_width="match_parent"
                            android:layout_height="370dp"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <com.osl.base.project.main.utils.chart.line.ChartLineDraw
                            android:id="@+id/chartLine"
                            android:layout_width="match_parent"
                            android:layout_height="370dp"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <com.osl.base.project.main.utils.chart.line.ChartLineAxisDraw
                            android:id="@+id/chartLineAxis"
                            android:layout_width="match_parent"
                            android:layout_height="370dp"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>